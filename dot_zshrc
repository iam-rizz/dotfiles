[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh
[[ -f ~/.zsh_welcome ]] && source ~/.zsh_welcome

toggle_p10k_style() {
  config="$HOME/.config/chezmoi/chezmoi.toml"
  styles_dir="$HOME/.local/share/chezmoi/config/styles"
  welcome_file="$HOME/.zsh_welcome"
  
  # Function to list available themes
  list_themes() {
    echo "Available themes:"
    for theme in "$styles_dir"/*; do
      if [ -d "$theme" ]; then
        theme_name=$(basename "$theme")
        if [ "$(grep 'p10k_style' "$config" | cut -d'"' -f2)" = "$theme_name" ]; then
          echo "  * $theme_name (current)"
        else
          echo "  - $theme_name"
        fi
      fi
    done
  }

  # Function to set theme
  set_theme() {
    theme="$1"
    if [ -d "$styles_dir/$theme" ]; then
      current=$(grep 'p10k_style' "$config" | cut -d'"' -f2)
      sed -i "s/p10k_style = \"$current\"/p10k_style = \"$theme\"/" "$config"
      echo "âœ”ï¸ Switched to $theme"
      chezmoi apply --force
      source ~/.zshrc
    else
      echo "âŒ Theme '$theme' not found"
      list_themes
    fi
  }

  # Function to toggle welcome message
  toggle_welcome() {
    case "$1" in
      "on")
        if [ -f "$welcome_file" ]; then
          echo "âœ”ï¸ Welcome message is already enabled"
        else
          touch "$welcome_file"
          echo "âœ”ï¸ Welcome message enabled"
          source ~/.zshrc
        fi
        ;;
      "off")
        if [ -f "$welcome_file" ]; then
          rm "$welcome_file"
          echo "âœ”ï¸ Welcome message disabled"
          source ~/.zshrc
        else
          echo "âœ”ï¸ Welcome message is already disabled"
        fi
        ;;
      *)
        echo "âŒ Please specify 'on' or 'off' for welcome message"
        echo "Usage: style! --welcome on|off"
        ;;
    esac
  }

  # Parse arguments
  case "$1" in
    "-l"|"--list"|"list")
      list_themes
      ;;
    "set")
      if [ -z "$2" ]; then
        echo "âŒ Please specify a theme name"
        list_themes
        return
      fi
      
      # Check if we have additional welcome flag
      if [ "$3" = "--welcome" ]; then
        if [ "$4" = "on" ] || [ "$4" = "off" ]; then
          set_theme "$2"
          toggle_welcome "$4"
        else
          echo "âŒ Invalid welcome option. Use 'on' or 'off'"
        fi
      else
        set_theme "$2"
      fi
      ;;
    "--welcome")
      toggle_welcome "$2"
      ;;
    "-h"|"--help")
      echo "Usage:"
      echo "  style!                              Toggle between neon and minimal themes"
      echo "  style! -l, --list                   List available themes"
      echo "  style! set <theme>                  Switch to specified theme"
      echo "  style! set <theme> --welcome on|off Switch theme and toggle welcome message"
      echo "  style! --welcome on|off             Enable or disable welcome message"
      echo "  style! -h, --help                   Show this help message"
      ;;
    *)
      echo "â•­â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ ğŸ¨ P10K Theme Manager â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•®"
      echo "â”‚                                                     "
      echo "â”‚  Commands:                                          "
      echo "â”‚  style! -l, --list       List available themes      "
      echo "â”‚  style! set <theme>      Switch to specified theme  "
      echo "â”‚  style! --welcome on|off Enable/disable welcome     "
      echo "â”‚                                                     "
      echo "â”‚  Combined Commands:                                 "
      echo "â”‚  style! set <theme> --welcome on|off               "
      echo "â”‚                                                      "
      echo "â”‚  Current Theme: $(grep 'p10k_style' "$config" | cut -d'"' -f2)                              "
      echo "â”‚  Welcome Message: $([ -f "$welcome_file" ] && echo "enabled" || echo "disabled")            "
      echo "â”‚                                                      "
      echo "â•°â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â•¯"
      ;;
  esac
}

# Update the alias to accept arguments
alias style!='toggle_p10k_style'